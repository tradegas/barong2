<div class="container">

  <h1>Users</h1>

  <table class="table table-bordered table-striped table-hover table-sm text-center">
    <thead>
      <tr>
        <th>ID</th>
        <th>E-mail</th>
        <th>Role</th>
        <th>Level</th>
        <th>Labels</th>
        <th>State</th>
        <th colspan=3></th>
      </tr>
    </thead>
    <tbody> 
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.email, admin_user_path(user.id)%></td>
          <td><span class=" badge <%= badge_by_role(user.role) %>"> <%= user.role %> </span></td>
          <td><%= user.level %></td>
          <td><%= label_tags(user) %></td>
          <td><%= user.state %></td>
          <td><%= link_to 'Edit', admin_user_path(user.id),  class: 'btn btn-primary btn-sm'  %></td>
          <td><%= link_to 'Delete', admin_user_path(user.id), method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users %>
</div>